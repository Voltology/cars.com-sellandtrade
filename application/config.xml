<?xml version='1.0' encoding='utf-8'?>
<widget id="com.voltology.carssellandtrade" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Sell & Trade</name>
    <description>
      Cars.com Sell And Trade Application
    </description>
    <author email="cvuletich@gmail.com" href="http://voltology.io">
      Chris Vuletich - Voltology.io
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" version="1" />
    <allow-navigation href="*" />
    <access origin="*" />
    <allow-intent href="*" />
    <platform name="android">
        <preference name="orientation" value="landscape" />
    </platform>
    <platform name="ios">
        <preference name="orientation" value="landscape" />
    </platform>
    <feature name="File">
      <param name="ios-package" value="CDVFile" />
    </feature>
    <feature name="FileTransfer">
      <param name="ios-package" value="CDVFileTransfer" />
    </feature>
</widget>
